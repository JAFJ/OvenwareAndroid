<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/correito"
        android:layout_width="242dp"
        android:layout_height="44dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/rounded_corner_text"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:inputType="textPersonName"
        android:text="@string/email"
        android:textColor="#545454"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/contra"
        android:layout_width="242dp"
        android:layout_height="44dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="316dp"
        android:background="@drawable/rounded_corner_text"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:inputType="textPersonName"
        android:text="@string/contra_lbl"
        android:textColor="#545454"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correito"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="242dp"
        android:layout_height="68dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/secular_one"
        android:gravity="center"
        android:text="Re-Bátiz"
        android:textColor="#9F4307"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="94dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="94dp"
        android:fontFamily="@font/open_sans"
        android:text="&quot;Tus útiles siguen siendo útiles&quot;"
        android:textColor="#AB5C28"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/open_sans"
        android:text="Bienvenido, hora de demostrarlo"
        android:textColor="#AB5C28"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="117dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:text="Olvidaste tu contraseña? Ntp, da click"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contra" />

    <Button
        android:id="@+id/buttoncontra"
        android:layout_width="66dp"
        android:layout_height="35dp"
        android:layout_marginStart="312dp"
        android:layout_marginEnd="33dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/open_sans"
        android:inputType="textCapSentences"
        android:text="aqui"
        android:textColor="#AB5C28"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contra" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="239dp"
        android:layout_height="148dp"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="86dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:text=" En caso de no tener cuenta, debe saber que no nos gustan los invitados, por favor regístrese."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="534dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="239dp"
        android:layout_height="148dp"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="86dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:text="Click aquí para registrarse ;)"
        android:textColor="#AB5C28"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="606dp" />

    <Button
        android:id="@+id/button_ingresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="185dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/open_sans"
        android:text="@string/sign_in"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>